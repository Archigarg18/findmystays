generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  phone     String    @db.VarChar(10)
  gender    String?
  city      String?
  email     String    @unique
  password  String
  bookings  Booking[] @relation("bookedBy")
  reviews   Review[]
  userFilters UserFilter[]
  wishlists Wishlist[]
  createdAt DateTime  @default(now())
}

model Owner {
  id        Int       @id @default(autoincrement())
  name      String?
  phone     String    @db.VarChar(10)
  gender    String?
  city      String?
  email     String    @unique
  password  String
  listings  Listing[]
  bookings  Booking[] @relation("ownedBy")
  createdAt DateTime  @default(now())
}

model Listing {
  id          Int       @id @default(autoincrement())
  ownerId     Int
  owner       Owner     @relation(fields: [ownerId], references: [id])
  name        String
  description String?
  location    String?
  price       Float?
  upiId       String?
  type        String?
  facilities  String?
  bookings    Booking[]
  reviews     Review[]
  wishlists   Wishlist[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model Booking {
  id        Int       @id @default(autoincrement())
  listingId Int
  listing   Listing   @relation(fields: [listingId], references: [id])
  userId    Int
  user      User      @relation("bookedBy", fields: [userId], references: [id])
  ownerId   Int
  owner     Owner     @relation("ownedBy", fields: [ownerId], references: [id])
  amount    Float
  paid      Boolean   @default(false)
  status    String?   @default("pending")
  txRef     String?
  paymentScreenshot String?
  payments  Payment[]
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Review {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  listingId Int
  listing   Listing   @relation(fields: [listingId], references: [id])
  rating    Int
  comment   String?
  userName  String?
  userEmail String?
  createdAt DateTime  @default(now())
}



model Payment {
  id               Int      @id @default(autoincrement())
  upiTransactionId String?
  amount           Float
  status           String   @default("pending")
  bookingId        Int
  booking          Booking  @relation(fields: [bookingId], references: [id])
  createdAt        DateTime @default(now())
}

model UserFilter {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  filterName  String
  filterValue String
  createdAt   DateTime @default(now())
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  listingId   Int
  listing     Listing  @relation(fields: [listingId], references: [id])
  listingName String?
  userName    String?
  userEmail   String?
  createdAt   DateTime @default(now())
  
  @@unique([userId, listingId])
}
