generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  phone     String    @db.VarChar(10)
  gender    String?
  city      String?
  email     String    @unique
  password  String
  bookings  Booking[] @relation("bookedBy")
  reviews   Review[]
  createdAt DateTime  @default(now())
}

model Owner {
  id        Int       @id @default(autoincrement())
  name      String?
  phone     String    @db.VarChar(10)
  gender    String?
  city      String?
  email     String    @unique
  password  String
  listings  Listing[]
  bookings  Booking[] @relation("ownedBy")
  createdAt DateTime  @default(now())
}

model Listing {
  id          Int       @id @default(autoincrement())
  ownerId     Int
  owner       Owner     @relation(fields: [ownerId], references: [id])
  name        String
  description String?
  location    String?
  price       Float?
  upiId       String?
  type        String?
  facilities  String?
  bookings    Booking[]
  reviews     Review[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model Booking {
  id        Int       @id @default(autoincrement())
  listingId Int
  listing   Listing   @relation(fields: [listingId], references: [id])
  userId    Int
  user      User      @relation("bookedBy", fields: [userId], references: [id])
  ownerId   Int
  owner     Owner     @relation("ownedBy", fields: [ownerId], references: [id])
  amount    Float
  paid      Boolean   @default(false)
  status    String?   @default("pending")
  txRef     String?
  paymentScreenshot String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Review {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  listingId Int
  listing   Listing   @relation(fields: [listingId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime  @default(now())
}

model Facility {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
}
